<!-- views/update.ejs -->
<!doctype html>
<html>
<head>
	<title>Node Authentication</title>
	<link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
	<link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
	<style>
		body 		{ padding-top:80px; word-wrap:break-word; }
	</style>
</head>
<body>
<div class="container">

	<div class="page-header text-center">
		<h1><span class="fa fa-anchor"></span> Add New Supplier</h1>
        <a href="/profile" class="btn btn-default btn-sm">Profile</a>
		<a href="/search" class="btn btn-default btn-sm">Search</a>
		<a href="/update" class="btn btn-default btn-sm">Add</a>
		<a href="/category" class="btn btn-default btn-sm">Category</a>
		<a href="/order" class="btn btn-default btn-sm">Order</a>
		<a href="/logout" class="btn btn-default btn-sm">Logout</a>
	</div>

	<div class="row">
		<!-- LOCAL INFORMATION -->
		<div class="col-sm-12">
			<div class="well">
                 <!-- LOGIN FORM -->
            <form action="/update" method="POST">
                <div class="form-group">
                    <label>Supplier Name</label>
                    <input type="text" class="form-control" name="name">
                </div>
                <div class="form-group">
                    <label>Phone Number</label>
                    <input type="number" class="form-control" name="phone">
                </div>
                <div class="form-group">
                    <label>Address</label>
                    <input type="text" class="form-control" name="address">
                </div>
                <div class="form-group">
                    <label>Bank Account</label>
                    <input type="number" class="form-control" name="bank">
                </div>
                <div class="form-group">
                    <label>Tax code</label>
                    <input type="number" class="form-control" name="taxcode">
                </div>
                <button type="submit" class="btn btn-warning btn-lg">Add</button>
                <hr style="padding-bottom: 20px"/>
                <% if(success.length > 0) {%>
                <div class="alert alert-success" role="alert">
                    <a href="#" class="alert-link">Successful</a>
                  </div>
                <% }%>
                 <!-- MESSAGE ERROR -->
                <% if(message.length) { %>
                <div style="margin-block: 10px">
                  <div class="alert alert-danger" role="alert"><%= message %></div>
                </div>
                <% } %>
            </form>
			</div>
		</div>
	</div>

</div>
</body>
</html>
